{
  "name": "krit-ui",
  "version": "0.1.2",
  "description": "สำหรับ NextJS 15.2.2 ขึ้นไป UI components with Tailwind CSS 4 ที่ NextJS ติดตั้งมาตั้งแต่เริ่มต้น",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./plugin": "./dist/kritui.js",
    "./kritui": "./dist/kritui.js"
  },
  "tailwindcss": {
    "pluginName": "kritui",
    "entryPoint": "./dist/kritui.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && npm run copy-entrypoint",
    "copy-entrypoint": "node -e \"require('fs').copyFileSync('src/kritui.js', 'dist/kritui.js')\"",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.14",
    "@types/node": "^22.13.10",
    "postcss": "8.5.3",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "^4.0.14",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "react",
    "tailwind4",
    "ui",
    "components",
    "nextjs",
    "tailwindcss-plugin"
  ],
  "author": "krit-east",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/krit-east/krit-ui.git"
  }
}
